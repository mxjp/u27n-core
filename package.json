{
	"name": "@u27n/core",
	"version": "1.3.0",
	"description": "Universal localization framework",
	"author": "Max J. Polster",
	"license": "MIT",
	"repository": "https://github.com/mxjp/u27n-core.git",
	"homepage": "https://github.com/mxjp/u27n-core",
	"main": "./dist/cjs/index.js",
	"module": "./dist/es/index.js",
	"bin": {
		"u27n": "./dist/cjs/cli.js"
	},
	"scripts": {
		"clean": "rimraf ./dist/**/* ./test_out/**/* ./test_data/**/*",
		"build": "concurrently npm:build:*",
		"build:es": "npm run clean && tsc -p tsconfig-es.json",
		"build:cjs": "npm run clean && tsc -p tsconfig-cjs.json",
		"test": "npm run clean && tsc -p tsconfig-test.json && ava -v",
		"start": "npm run clean && tsc -p tsconfig-test.json && concurrently \"tsc -p tsconfig-test.json -w\" \"ava -v -w\"",
		"lint": "eslint --config .eslintrc.json ./src/**/* ./test/**/*",
		"prepack": "npm run lint && npm test && npm run build"
	},
	"devDependencies": {
		"@mpt/eslint-rules": "^2.0.0",
		"@types/node": "^16.11.1",
		"@types/picomatch": "^2.3.0",
		"@types/resolve": "^1.20.1",
		"@types/yargs-parser": "^20.2.1",
		"ava": "^3.15.0",
		"concurrently": "^6.3.0",
		"rimraf": "^3.0.2",
		"typescript": "^4.4.4"
	},
	"dependencies": {
		"@mpt/line-map": "^1.0.0",
		"ansi-colors": "^4.1.1",
		"picomatch": "^2.3.0",
		"resolve": "^1.20.0",
		"yargs-parser": "^21.0.0",
		"chokidar": "^3.5.2"
	}
}
