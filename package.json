{
	"name": "@u27n/core",
	"version": "3.1.0",
	"description": "Universal localization framework",
	"keywords": [
		"u27n",
		"i18n",
		"internationalization",
		"l10n",
		"localization",
		"g11n",
		"globalization",
		"translation"
	],
	"author": "Max J. Polster",
	"license": "MIT",
	"repository": "https://github.com/mxjp/u27n-core.git",
	"homepage": "https://github.com/mxjp/u27n-core",
	"type": "module",
	"main": "./dist/es/index.js",
	"exports": {
		".": {
			"types": "./dist/es/index.d.ts",
			"default": "./dist/es/index.js"
		},
		"./runtime": {
			"types": "./dist/es/runtime/index.d.ts",
			"default": "./dist/es/runtime/index.js"
		},
		"./default-data-adapter": {
			"types": "./dist/es/default-data-adapter/index.d.ts",
			"default": "./dist/es/default-data-adapter/index.js"
		},
		"./resources/": "./resources/"
	},
	"bin": {
		"u27n": "./dist/es/cli.js"
	},
	"scripts": {
		"clean": "rimraf ./dist ./test_out ./test_data ./src/runtime/generated ./src/generated",
		"generate": "mx-parallel npm:generate:*",
		"generate:plurals": "tsc -p tsconfig-generators.json && node ./generators_out/plurals.js",
		"build": "npm run clean && npm run generate && mx-parallel npm:build:*",
		"build:es": "tsc -p tsconfig-es.json",
		"build:cjs": "tsc -p tsconfig-cjs.json",
		"test": "npm run clean && npm run generate && tsc -p tsconfig-test.json && ava -v",
		"start": "npm run clean && npm run generate && tsc -p tsconfig-test.json && mx-parallel \"tsc -p tsconfig-test.json -w\" \"ava -v -w\"",
		"start:build": "mx-parallel \"tsc -p tsconfig-es.json -w\" \"tsc -p tsconfig-cjs.json -w\"",
		"prepack": "npm test && npm run build"
	},
	"devDependencies": {
		"@mxjp/parallel": "^1.0.2",
		"@types/js-string-escape": "^1.0.3",
		"@types/node": "^22.13.1",
		"@types/picomatch": "^3.0.2",
		"@types/resolve": "^1.20.6",
		"@types/yargs-parser": "^21.0.3",
		"ava": "^6.2.0",
		"js-string-escape": "^1.0.1",
		"json5": "^2.2.3",
		"rimraf": "^6.0.1",
		"typescript": "^5.7.3"
	},
	"dependencies": {
		"@mpt/line-map": "^1.0.0",
		"ansi-colors": "^4.1.3",
		"chokidar": "^3.6.0",
		"picomatch": "^4.0.2",
		"resolve": "^1.22.10",
		"yargs-parser": "^21.1.1"
	}
}
